@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Hidden("UrlLoadEmpleados", Url.Action("LISTAR_PERSONAL", "Mantenimiento"))

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="green">
                        <i class="material-icons">view_compact</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Productos</p>
                    </div>
                    <br />
                    <br />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="blue">
                        <i class="material-icons">assignment_ind</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Empleados</p>
                    </div>
                    <br />
                    <br />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="red">
                        <i class="material-icons">playlist_add_check</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Mesas</p>
                    </div>
                    <br />
                    <br />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="blue">
                        <i class="material-icons">message</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Platos</p>
                    </div>
                    <br />
                    <br />
                </div>
            </div>
        </div>

        <div class="">
            <div class="col-lg-12 col-md-12">
                <div class="card card-nav-tabs">
                    <div class="card-header" data-background-color="purple">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title">Listado:</span>
                                <ul class="nav nav-tabs" data-tabs="tabs">
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="tab-content">
                            <div class="tab-pane active" id="profile">
                                <table id="TablaItems" class="table display table table-striped table-bordered table-hover table-condensed" style="overflow-wrap: break-word;" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>iCodEmpleado</th>
                                            <th>vUsuario</th>
                                            <th>vNombre</th>
                                            <th>vApellido</th>
                                            <th>vTelefono</th>
                                            <th>vMail</th>
                                            <th>vDocPersona</th>
                                            <th>vNombrePerfil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Views/Mantenimiento/Index.js" type="text/javascript"></script>
